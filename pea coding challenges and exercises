//3.sum of a given range
function summation(n) {
  let sum = 0;
  for (let i = 1; i <= n; i++) {
    sum += i;
  }
  console.log(sum);
}
//summation(5);

//4. a program that prints multiples of three.
function multipleSummation(n) {
  let sum = 0;
  for (let i = 0; i <= n; i++) {
    if (i % 3 === 0 || i % 5 === 0) {
      sum += i;
    }
  }
  console.log(sum);
}

5; //A program that print multiplication table
function mulptiplicationTable(n) {
  let product = 0;

  for (let i = 1; i <= 12; i++) {
    product = n * i;
    console.log(`${n}  x  ${i} = ${product}`);
  }
}
mulptiplicationTable(4);

//6. A program that prints prime number of a given range.
const primeNumber = function (num) {
  for (let i = 1; i <= num; i++) {
    let remainder = 0;
    for (let j = 2; j < i; j++) {
      if (i % j == 0) {
        remainder = 1;
        break;
      }
    }
    if (i > 1 && remainder == 0) {
      console.log(`${i} is a prime number`);
    }
  }
};

//7. a program that logs maximum value of arrays
const maximumValue = function (arr) {
  console.log(Math.max(...arr));
};
//8. a program that logs minimum value of arrays
const minimumValue = function (arr) {
  console.log(Math.min(...arr));
};
//9. a program that reverse an array
function reverse(n) {
  console.log(n.reverse());
}
//10. a program that reverse a string
const reverseString = function (word) {
  let newWord = "";
  for (let i = word.length - 1; i >= 0; i--) {
    newWord += word[i];
  }
  console.log(newWord);
};
//11. a program that prints longes string in an array
const longestStr = function (arr) {
  let maxStr = arr[0].length;
  let longestWord = arr[0];
  for (let i = 1; i < arr.length; i++) {
    let max = arr[i].length;
    if (max > maxStr) {
      longestWord = arr[i];
      maxStr = max;
    }
  }
  console.log(longestWord);
};
// 12. a program that checks if an element is in an array.
const checkElement = function (arr, element) {
  console.log(arr.includes(element));
};

