}
//14. program that takes values from alternate array
function alternateArray(arr1, arr2) {
  let newArray = [];
  let arrayLength = 0;
  arr1.length > arr2.length || arr1.length === arr2.length
    ? (arrayLength = arr1.length)
    : (arrayLength = arr2.length);
  for (let i = 0; i < arr1.length; i++) {
    newArray.push(arr1[i]);
    newArray.push(arr2[i]);
  }
  newArray = newArray.filter(function (element) {
    return element !== undefined;
  });
  console.log(newArray);
}

alternateArray([2, 5, 6, 8, 7, 9], ["a", "f", "e ", "et", "okay"]);
//15. program that print within a frame
const printFrame = function (arr) {
  let maxStr = arr[0].length;
  let str = "*";
  let max = 0;
  for (let i = 1; i < arr.length; i++) {
    max = arr[i].length;
    if (max > maxStr) {
      maxStr = max;
    }
    console.log(max);
  }
  str = str.repeat(maxStr + 4);
  for (let j = 0; j < arr.length; j++) {
    str += `\n* ${arr[j]} ${" ".repeat(maxStr - arr[j].length)}*`;
  }
  str += `\n${"*".repeat(maxStr + 4)}`;
  console.log(str);
};
